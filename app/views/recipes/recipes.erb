<h2>All Recipes!</h2>
<!-- You will be able to view all by all bakers -->
<ul>
  <% @recipes.each do |recipe| %>
    <li>
      <a href="/recipes/<%= recipe.id %>">
        <%= recipe.name %>
      </a>
    </li>
  <% end %>
</ul>
<br>

<!-- Links for dashboard, by category, logout -->

<form method="get" action="/bakers/show_dashboard">
    <button type="submit">View Your Recipes</button>
</form>
<br>
<form method="get" action="/categories/index">
    <button type="submit">View by Category</button>
</form>
<br>
<form method="get" action="/logout">
    <button type="submit">Log Out</button>
</form>
